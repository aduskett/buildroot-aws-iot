config BR2_PACKAGE_ALEXA_SMART_SCREEN_SDK
	bool "alexa-smart-screen-sdk"
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_4_8 # websocketpp -> C++11
	depends on BR2_INSTALL_LIBSTDCPP # aws-crt-cpp
	depends on BR2_USE_MMU # libasio
	depends on BR2_USE_WCHAR # libasio
	depends on BR2_TOOLCHAIN_SUPPORTS_ALWAYS_LOCKFREE_ATOMIC_INTS # libasio
	depends on !BR2_TOOLCHAIN_HAS_GCC_BUG_64735 # exception_ptr # libasio
	depends on BR2_TOOLCHAIN_HAS_THREADS
	select BR2_PACKAGE_AVS_DEVICE_SDK
	select BR2_PACKAGE_APL_CORE_LIBRARY
	select BR2_PACKAGE_LIBASIO
	select BR2_PACKAGE_RAPIDJSON
	select BR2_PACKAGE_WEBSOCKETPP
	help
	  APL Core Library enables device makers to create their own
	  "APL viewhost", bringing Alexa experiences with visual
	  renderings to new devices or platforms using any programming
	  language that can invoke C/C++ code.

	  https://github.com/alexa/apl-core-library

comment "alexa-smart-screen-sdk needs a toolchain w/ C++, dynamic library, threads, wchar and gcc >= 4.8"
	depends on BR2_USE_MMU
	depends on BR2_TOOLCHAIN_SUPPORTS_ALWAYS_LOCKFREE_ATOMIC_INTS
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS || \
		!BR2_USE_WCHAR || !BR2_TOOLCHAIN_GCC_AT_LEAST_4_8

comment "alexa-smart-screen-sdk needs exception_ptr"
	depends on BR2_TOOLCHAIN_HAS_GCC_BUG_64735
