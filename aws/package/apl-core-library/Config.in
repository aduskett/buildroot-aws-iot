config BR2_PACKAGE_APL_CORE_LIBRARY
	bool "apl-core-library"
	depends on BR2_INSTALL_LIBSTDCPP # aws-crt-cpp
	depends on BR2_TOOLCHAIN_HAS_THREADS
	select BR2_PACKAGE_RAPIDJSON
	help
	  APL Core Library enables device makers to create their own
	  "APL viewhost", bringing Alexa experiences with visual
	  renderings to new devices or platforms using any programming
	  language that can invoke C/C++ code.

	  https://github.com/alexa/apl-core-library

comment "aws-iot-device-sdk-cpp needs a toolchain w/ threads, C++"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS
