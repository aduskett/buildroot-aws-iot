config BR2_PACKAGE_AWS_C_HTTP
	bool "aws-c-http"
	depends on BR2_TOOLCHAIN_HAS_THREADS # aws-c-compression -> aws-c-common
	select BR2_PACKAGE_AWS_C_CAL
	select BR2_PACKAGE_AWS_C_COMMON
	select BR2_PACKAGE_AWS_C_COMPRESSION
	select BR2_PACKAGE_AWS_C_IO
	select BR2_PACKAGE_OPENSSL
	select BR2_PACKAGE_S2N
	help
	  C99 implementation of the HTTP/1.1 and HTTP/2 specifications

	  https://github.com/awslabs/aws-c-http

comment "aws-c-http needs a toolchain w/ threads"
	depends on !BR2_TOOLCHAIN_HAS_THREADS
